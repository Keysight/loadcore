{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "LoadCore CloudFormation",
    "Mappings": {
        "RegionMap": {
            "eu-north-1": {
                "AMIAgent": "ami-028538395d97af856",
                "AMILoadCore": "ami-0fb7c62a79c04cfbc",
                "AMILicensing": "ami-078682bc245361ca4"
            },
            "ap-south-1": {
                "AMIAgent": "ami-0c8518d70bc14ef82",
                "AMILoadCore": "ami-0f3423bb7aa4586a6",
